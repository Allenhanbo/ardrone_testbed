<launch>
<!-- launch drone controller -->
  <node name="Controller" pkg="ardrone_controller" type="controller_node" output="screen" />

<!-- launch orb -->
  <node name="ORB_mono" pkg="ardrone_orb" type="ros_orb_node" output="screen" args="$(find ardrone_orb)/ORBvoc.txt  $(find ardrone_orb)/settings.yaml" launch-prefix="xterm -e gdb --args">
  <remap from="/camera/image_raw" to="/ardrone/front/image_raw" />
  </node>

<!-- launch hector trajectory plotter -->
  <node name="hector_trajectory_server" pkg="hector_trajectory_server" type="hector_trajectory_server" output="screen" />

<!-- launch rviz -->
  <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find ardrone_orb)/../rviz/master_config.rviz" />

</launch>

